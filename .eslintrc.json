{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "indent": [
        "error",
        2
    ],
    "linebreak-style": [
        "error",
        "windows"
    ],
    "quotes": [
        "error",
        "double",
        {
          "allowTemplateLiterals": true
        }
    ],
    "semi": [
        "error",
        "always"
    ],
    "yoda": "error",
    "space-before-function-paren": "off",
    "eqeqeq": "error",
    "prefer-const": "error",
    "no-var": "error"
  }
}